<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>
	<classPathEntry location="C://postgresql-9.4.1212.jre7.jar" />

	<context id="service_db" defaultModelType="flat">

		<!-- Java source code file encoding -->
		<property name="javaFileEncoding" value="UTF-8" />

		<!-- MBG-Plugin:RowBounds(LIMIT,OFFSET)Activation -->
		<plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />
		<!-- MBG-Plugin:Dto Implement string representation class -->
		<plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
		<!-- MBG-Plugin:Serialized Interface implementation -->
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

		<!-- Access DB -->
		<jdbcConnection driverClass="org.postgresql.Driver"
			connectionURL="jdbc:postgresql://localhost:5432/mkyong" userId="postgres"
			password="admin" />

		<!-- Generate entity class for each table targetPackage: Java package configuration targetProject: Destination folder path -->
		<javaModelGenerator targetPackage="com.example.msp.database.entity"
			targetProject=".\src\main\java\" />

		<!-- Mapper class generation for each table targetPackage: Java package configuration targetProject: Destination folder path 
			type: ANNOTATEDMAPPER(Generate SQL in annotation) -->
		<javaClientGenerator targetPackage="com.example.msp.database.mapper"
			targetProject=".\src\main\java\" type="ANNOTATEDMAPPER" />

		<!-- Automatically generated target table -->
		<table tableName="users" delimitIdentifiers="true"
			delimitAllColumns="true" />
	</context>

</generatorConfiguration>